{
  "name": "hotcross",
  "displayName": "Hotcross",
  "description": "MCP-powered code intelligence relay with persistent context storage",
  "version": "0.1.0",
  "author": "Atelier Logos",
  "homepage": "https://github.com/atelierlogos/hotcross",
  "license": "Elastic-2.0",
  "runtime": "python",
  "command": "uvx",
  "args": ["--from", "git+https://github.com/atelierlogos/hotcross", "hotcross"],
  "env": {
    "DATABASE_URL": {
      "description": "PostgreSQL connection string for authentication",
      "required": true
    },
    "HOTCROSS_API_KEY": {
      "description": "API key for accessing MCP tools",
      "required": true
    }
  }
}
